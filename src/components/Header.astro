---
// Header component
---

<header class="header">
  <div class="header-content">
    <div class="header-title">
      <video autoplay muted loop playsinline class="header-logo">
        <source src="/logo.mp4" type="video/mp4">
      </video>
      <div class="header-name-group">
        <h1>さわら</h1>
        <span class="header-name-en">Hiroaki OGASAWARA</span>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    background-color: #f8f8f8;
    padding: 1rem 2rem;
    border-bottom: 2px solid #3F7357;
  }

  .header-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .header-title {
    display: flex;
    align-items: flex-end;
    gap: 0.3rem;
  }

  .header-logo {
    width: 40px;
    height: 40px;
    object-fit: cover;
    border-radius: 6px;
    cursor: pointer;
  }

  .header-name-group {
    display: flex;
    align-items: flex-end;
    gap: 0.3rem;
  }

  .header h1 {
    font-size: 2rem;
    margin: 0;
    color: #333;
    line-height: 1;
  }

  .header-name-en {
    font-size: 0.8rem;
    color: #666;
    font-weight: bold;
    line-height: 1;
  }

  @media (max-width: 768px) {
    .header {
      padding: 1rem;
    }
    
    .header-title {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }
    
    .header-name-group {
      flex-direction: column;
      align-items: center;
      gap: 0.3rem;
    }
  }
</style>