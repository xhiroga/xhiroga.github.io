---
import Icon from './icons/Icon.astro';

const graph_paper_green = '#3F7357';
---

<footer class="footer">
  <div class="footer-content">
    <div class="social-links">
      <a href="https://github.com/xhiroga" target="_blank" rel="noopener noreferrer" title="GitHub" onclick="gtag('event', 'click', {'event_category': 'social', 'event_label': 'GitHub'})">
        <Icon name="github" size={24} color={graph_paper_green} />
      </a>
      <a href="https://twitter.com/xhiroga" target="_blank" rel="noopener noreferrer" title="Twitter (X)" onclick="gtag('event', 'click', {'event_category': 'social', 'event_label': 'Twitter'})">
        <Icon name="twitter" size={24} color={graph_paper_green} />
      </a>
      <a href="https://bsky.app/profile/hiroga.bsky.social" target="_blank" rel="noopener noreferrer" title="Bluesky" onclick="gtag('event', 'click', {'event_category': 'social', 'event_label': 'Bluesky'})">
        <Icon name="bluesky" size={24} color={graph_paper_green} />
      </a>
      <a href="https://discord.gg/7z9HqgR8Bd" target="_blank" rel="noopener noreferrer" title="Discord" onclick="gtag('event', 'click', {'event_category': 'social', 'event_label': 'Discord'})">
        <Icon name="discord" size={24} color={graph_paper_green} />
      </a>
      <a href="https://www.linkedin.com/in/hiroga/" target="_blank" rel="noopener noreferrer" title="LinkedIn" onclick="gtag('event', 'click', {'event_category': 'social', 'event_label': 'LinkedIn'})">
        <Icon name="linkedin" size={24} color={graph_paper_green} />
      </a>
      <a href="https://hiroga.booth.pm/" target="_blank" rel="noopener noreferrer" title="BOOTH" onclick="gtag('event', 'click', {'event_category': 'social', 'event_label': 'BOOTH'})">
        <Icon name="booth" size={24} color={graph_paper_green} />
      </a>
      <a href="https://note.com/hiroga" target="_blank" rel="noopener noreferrer" title="note" onclick="gtag('event', 'click', {'event_category': 'social', 'event_label': 'note'})">
        <Icon name="note" size={24} color={graph_paper_green} />
      </a>
    </div>
    <p class="copyright">Â© 2025 Hiroaki Ogasawara</p>
  </div>
</footer>

<style>
  .footer {
    margin-top: 4rem;
    padding: 2rem 0;
    border-top: 1px solid #e0e0e0;
  }

  .footer-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .social-links a {
    text-decoration: none;
    transition: transform 0.2s, opacity 0.2s;
    display: inline-block;
  }

  .social-links a:hover {
    transform: scale(1.2);
    opacity: 0.8;
  }

  .copyright {
    font-size: 0.9rem;
    color: #666;
  }
</style>