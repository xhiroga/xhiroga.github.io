---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout title="Portfolio - hiroga">
	<main>
		<section class="hero">
			<span class="hero-title">
				<video autoplay muted loop class="logo-video">
					<source src="/logo.mp4" type="video/mp4">
				</video>
				<h1>さわら</h1>
			</span>
		</section>
		
		<section class="projects">
			<h2>Projects</h2>
			<div class="project-grid">
				<div class="project">
					<h3>Turntable</h3>
					<p>3D visualization tool</p>
					<iframe src="https://turntable.sawara.dev" width="100%" height="300" frameborder="0"></iframe>
					<a href="https://turntable.sawara.dev" target="_blank" rel="noopener noreferrer">Visit Turntable →</a>
				</div>
				<div class="project">
					<h3>パチ文字メーカー</h3>
					<p>3D text generator</p>
					<iframe src="https://3dtext.sawara.dev" width="100%" height="300" frameborder="0"></iframe>
					<a href="https://3dtext.sawara.dev" target="_blank" rel="noopener noreferrer">Visit パチ文字メーカー →</a>
				</div>
			</div>
		</section>
		
		<section class="presentations">
			<h2>Presentations</h2>
			<div class="presentation-grid">
				<div class="presentation">
					<h3>LlamaGen: LlamaのNext-Token予測を使った画像生成</h3>
					<p>松尾研 LLM コミュニティ "Paper & Hacks Vol.28"</p>
					<iframe width="560" height="315" src="https://www.youtube.com/embed/onCWChnwhHI" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
				</div>
				<div class="presentation">
					<h3>DeepSeek Janusのアーキテクチャ</h3>
					<p>松尾研 LLM コミュニティ "Paper & Hacks Vol.35"</p>
					<iframe width="560" height="315" src="https://www.youtube.com/embed/DFnlVWbr5Jk" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
				</div>
			</div>
		</section>
		
		<section class="contact">
			<h2>Contact</h2>
			<div class="contact-links">
				<a href="https://github.com/xhiroga" target="_blank" rel="noopener noreferrer" title="GitHub">🐙</a>
				<a href="https://twitter.com/xhiroga" target="_blank" rel="noopener noreferrer" title="Twitter (X)">🐦</a>
				<a href="https://bsky.app/profile/xhiroga.bsky.social" target="_blank" rel="noopener noreferrer" title="Bluesky">🦋</a>
				<a href="https://discord.com/users/xhiroga" target="_blank" rel="noopener noreferrer" title="Discord">💬</a>
				<a href="https://linkedin.com/in/xhiroga" target="_blank" rel="noopener noreferrer" title="LinkedIn">💼</a>
				<a href="https://booth.pm/ja/users/xhiroga" target="_blank" rel="noopener noreferrer" title="BOOTH">🛍️</a>
			</div>
		</section>
	</main>
</BaseLayout>
